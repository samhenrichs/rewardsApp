<% if current_user.try(:email) == "sbhenrichs@gmail.com" || "camblackwell2@gmail.com"%>
<br>
<div class="form-horizontal">
  <fieldset>
    <%= form_for @blog do |f| %>
    <div class="form-group">
      <label class="col-lg-2">Image</label>
      <div class="col-lg-10">
        <%= f.file_field :image, id: "choose-file" %>
      </div>
    </div>
    <div class="form-group">
      <label for="" class="col-lg-2">Title</label>
      <div class="col-lg-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="" class="col-lg-2">Body</label>
      <div class="col-lg-10">
        <%= f.text_area :body, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-2"></div>
      <div class="col-lg-10">
        <%= f.submit "Update/Create Post", class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
    <% else %>
    <div><h3>Congrats on finding this page! Unfourtunately, you're not an admin, so you can't make a new blog post, but you can still <a href="/blogs">read them.</a><h3></div>
  <% end %>
